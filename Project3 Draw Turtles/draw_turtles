import turtle
def draw_square(some_turtle):
	for i in range(1,5):
		some_turtle.forward(100)
		some_turtle.right(90)
def draw_art():
	window=turtle.Screen()
	window.bgcolor("red")
	brad=turtle.Turtle()
	brad.shape("turtle")
	brad.color("yellow")
	brad.speed(100)
	for x in xrange(1,75):
		draw_square(brad)
		brad.left(5)
	window.exitonclick()
draw_art()